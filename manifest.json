{
  "name": "Trello Doc List",
  "description": "Change trello board view to document list like view",
  "version": "1.0.1",
  "permissions": [
    "tabs", "*://trello.com/*"
  ],
  "browser_action": {
      "default_title": "Enable trello doc list.",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  },
  "content_scripts": [
      {
          "matches": ["*://trello.com/*"],
          "js": [
              "libs/jquery.js",
              "embed.js"
          ],
          "css": [
              "text_list.css"
          ]
      }
  ],
  "web_accessible_resources": [
    "libs/jquery.js",
    "hide_functions.js"
  ]
}
